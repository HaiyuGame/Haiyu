<?xml version="1.0" encoding="utf-8"?>
<!-- https://go.microsoft.com/fwlink/?LinkID=208121. -->
<Project>
  <PropertyGroup>
    <PublishProtocol>FileSystem</PublishProtocol>
    <Platform>x64</Platform>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <PublishDir>bin\\win-x64\publish\</PublishDir>
    <SelfContained>true</SelfContained>
    <PublishSingleFile>false</PublishSingleFile>
    <Configuration>Release</Configuration>
    <TargetFramework>net10.0-windows10.0.19041.0</TargetFramework>
    <PublishReadyToRun>false</PublishReadyToRun>
	<WindowsPackageType>None</WindowsPackageType>
	<!-- Exe 打包 -->
	  <!--
	-->
    <!-- 仅包含指定卫星语言（示例：只保留英文） -->
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
  </PropertyGroup>

  <!-- 如果仍然有不需要的 language 文件夹，可以在发布后删除它们 -->
  <Target Name="RemoveUnwantedSatelliteResources" AfterTargets="Publish">
    <!-- 列出需要删除的文化代码（根据实际情况修改或追加） -->
    <ItemGroup>
      <_UnwantedCultures Include="cs;de;es;fr;zh-cn;zh-tw;ru;pt;it;ja;ko;pl" />
    </ItemGroup>

    <ItemGroup>
      <!-- 生成要删除的目录全路径 -->
      <_SatelliteDirs Include="@(_UnwantedCultures->'$(PublishDir)%(Identity)')" />
    </ItemGroup>

    <Message Text="Removing satellite resource directories: %(_SatelliteDirs.Identity)" Importance="high" />
    <RemoveDir Directories="@(_SatelliteDirs)" ContinueOnError="true" />
  </Target>
</Project>
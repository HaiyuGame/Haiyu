<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Haiyu.Pages.XboxDisplayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Haiyu.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    CornerRadius="5"
    mc:Ignorable="d">

    <Grid
        Padding="5"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="{ThemeResource AcrylicBackgroundFillColorBaseBrush}"
        CornerRadius="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">

            <TextBlock Text="启用/关闭" />
            <FontIcon
                Margin="10,0,0,0"
                FontFamily="Segoe Fluent Icons"
                Glyph="&#xF108;" />
            <TextBlock Text="+" />
            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xF109;" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="0,10,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="鼠标移动" />
            <FontIcon
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe Fluent Icons"
                Glyph="&#xF108;" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="鼠标滚轮" />
            <FontIcon
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe Fluent Icons"
                Glyph="&#xF109;" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Margin="0,10,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="鼠标左键" />
            <FontIcon
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe Fluent Icons"
                Glyph="&#xF096;" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Margin="0,10,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="鼠标右键" />
            <FontIcon
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe Fluent Icons"
                Glyph="&#xF096;" />
        </StackPanel>
    </Grid>
</Page>

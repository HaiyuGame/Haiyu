<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Haiyu.Pages.Communitys.GamerRoilsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:a="using:CommunityToolkit.WinUI.Animations"
    xmlns:b="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:cui="using:CommunityToolkit.WinUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Haiyu.Pages.Communitys"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:property="using:Haiyu.Controls.Propertys"
    xmlns:uModel="using:Haiyu.Models.Wrapper"
    xmlns:ui="using:Haiyu.Controls"
    xmlns:vModel="using:Haiyu.Models"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Margin="0,-35,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <ComboBox
                Width="100"
                Padding="10,5"
                HorizontalAlignment="Stretch"
                CornerRadius="10 3 10 3"
                ItemsSource="{x:Bind ViewModel.GamerFilter, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Style="{ThemeResource AcrylicComboBoxStyle}">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="vModel:GamerRoleFilter">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock
                                Margin="5,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{x:Bind DisplayName, Mode=OneWay}" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <ScrollView Grid.Row="1">

            <ItemsRepeater ItemsSource="{x:Bind ViewModel.RoleDatas, Mode=OneWay}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="uModel:DataCenterRoilItemWrapper">
                        <ui:DraggableCardControl
                            Margin="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            cui:Effects.Shadow="{StaticResource CardShadow}"
                            Command="{x:Bind ClickShowCommand}"
                            CornerRadius="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Border
                                    Margin="0,3,3,0"
                                    Padding="5,2"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Canvas.ZIndex="2"
                                    CornerRadius="5">
                                    <Viewbox Height="15">
                                        <RatingControl
                                            IsClearEnabled="False"
                                            IsReadOnly="True"
                                            MaxRating="5"
                                            Value="{x:Bind StarLevel}" />
                                    </Viewbox>
                                </Border>
                                <Border
                                    Width="20"
                                    Height="20"
                                    Margin="3,3,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Canvas.ZIndex="2"
                                    CornerRadius="5">
                                    <Image
                                        VerticalAlignment="Top"
                                        Source="{x:Bind TypeImage}"
                                        Stretch="UniformToFill" />
                                </Border>

                                <Border
                                    Grid.RowSpan="1"
                                    Margin="0,8,0,0"
                                    VerticalAlignment="Stretch"
                                    CornerRadius="5">
                                    <ui:ImageEx Stretch="Uniform">
                                        <ui:ImageEx.Source>
                                            <BitmapImage
                                                DecodePixelHeight="120"
                                                DecodePixelWidth="120"
                                                UriSource="{x:Bind RoleIconUrl}" />
                                        </ui:ImageEx.Source>
                                    </ui:ImageEx>
                                </Border>
                                <Border
                                    Grid.Row="1"
                                    Padding="5"
                                    Background="{ThemeResource SolidBackgroundFillColorBaseAltBrush}">
                                    <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                                        <TextBlock
                                            Grid.Row="1 "
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12">
                                            <Run Text="{x:Bind AttributeName}" />
                                            <Run Text="●" />
                                            <Run Text="{x:Bind RoleName}" />
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </ui:DraggableCardControl>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
                <ItemsRepeater.Layout>
                    <UniformGridLayout
                        ItemsJustification="Start"
                        ItemsStretch="Uniform"
                        MinColumnSpacing="2"
                        MinItemHeight="130"
                        MinItemWidth="110" />
                </ItemsRepeater.Layout>

            </ItemsRepeater>
        </ScrollView>
    </Grid>
</Page>

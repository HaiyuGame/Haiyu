<Page
    x:Class="Haiyu.Pages.GameWikis.WavesWikiPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:item="using:Waves.Api.Models.Communitys"
    xmlns:local="using:Haiyu.Pages.GameWikis"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:source="using:Waves.Api.Models.Communitys.DataCenter"
    xmlns:ui="using:Haiyu.Controls"
    xmlns:ui1="using:CommunityToolkit.WinUI"
    xmlns:wiki="using:Waves.Api.Models.GameWikiiClient"
    xmlns:wikiModel="using:Haiyu.Models.Wrapper.Wiki"
    xmlns:wrapper="using:Haiyu.Models.Wrapper"
    xmlns:wuc="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Page.Resources>
        <media:AttachedCardShadow
            x:Key="CommonShadow"
            BlurRadius="10"
            Opacity="1"
            Offset="4"
            Color="Black" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="185" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Visibility="{x:Bind ViewModel.Loading, Mode=OneWay, Converter={StaticResource BoolToVisibilityReversalConverter}}">
            <Grid.ChildrenTransitions>
                <TransitionCollection>
                    <RepositionThemeTransition />
                </TransitionCollection>
            </Grid.ChildrenTransitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
                <TextBlock
                    Margin="5,0,0,0"
                    FontFamily="{ThemeResource DefaultFont}"
                    FontSize="20"
                    Text="当前活动" />
                <ScrollViewer
                    Padding="0,0,0,10"
                    VerticalAlignment="Top"
                    HorizontalScrollBarVisibility="Visible"
                    HorizontalScrollMode="Enabled"
                    VerticalScrollMode="Disabled">
                    <ItemsControl ItemsSource="{x:Bind ViewModel.Actives, Mode=OneWay}">
                        <ItemsControl.ItemContainerTransitions>
                            <TransitionCollection>
                                <AddDeleteThemeTransition />
                            </TransitionCollection>
                        </ItemsControl.ItemContainerTransitions>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="wikiModel:HotContentSideWrapper">
                                <ui:HeaderTileCard
                                    Width="350"
                                    Margin="3"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource SystemColorGrayTextBrush}"
                                    BorderThickness="1"
                                    Command="{x:Bind JumpWebCommand}"
                                    CornerRadius="5">
                                    <Grid Padding="5" BorderThickness="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <ui:ImageEx
                                            Width="120"
                                            Height="120"
                                            CornerRadius="5"
                                            Source="{x:Bind ImageUrl}"
                                            Stretch="Uniform" />
                                        <Grid Grid.Column="1" Margin="8,0,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition Height="auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                FontFamily="{ThemeResource DefaultFont}"
                                                FontSize="17"
                                                Text="{x:Bind Title}" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="0,10,0,0"
                                                FontSize="15"
                                                Text="{x:Bind StartTime}"
                                                Visibility="{x:Bind TimeVisibility}" />
                                            <TextBlock
                                                Grid.Row="2"
                                                Margin="0,10,0,0"
                                                FontSize="15"
                                                Text="{x:Bind EndTime}"
                                                Visibility="{x:Bind TimeVisibility}" />
                                            <StackPanel
                                                Grid.Row="3"
                                                VerticalAlignment="Bottom"
                                                Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,3,0,0"
                                                    FontFamily="Segoe Fluent Icons"
                                                    Text="&#xEC92;" />
                                                <TextBlock
                                                    Margin="3,0,0,0"
                                                    Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                                    Text="{x:Bind Message, Mode=OneWay}" />
                                                <TextBlock Text="" />
                                                <TextBlock Text="{x:Bind TotalSpan}" TextTrimming="CharacterEllipsis" />
                                            </StackPanel>
                                        </Grid>
                                        <ProgressBar
                                            Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            Margin="0,5,0,0"
                                            HorizontalAlignment="Stretch"
                                            Maximum="{x:Bind MaxProgress, Mode=OneWay}"
                                            Value="{x:Bind CurrentProgress, Mode=OneWay}" />
                                    </Grid>
                                </ui:HeaderTileCard>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Grid>
        <Border Grid.Row="1" Visibility="{x:Bind ViewModel.Loading, Mode=OneWay, Converter={StaticResource BoolToVisibilityReversalConverter}}">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>
                <Border
                    Margin="5"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource SystemColorGrayTextBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Visibility="{x:Bind ViewModel.KuroLogin, Mode=OneWay, Converter={StaticResource BoolToVisibilityReversalConverter}}">
                    <StackPanel
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <TextBlock Text="未登录或登陆过期" />
                    </StackPanel>
                </Border>
                <Grid
                    Margin="5"
                    CornerRadius="4"
                    Visibility="{x:Bind ViewModel.KuroLogin, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.ContextFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Command="{x:Bind ViewModel.RefreshUserCommand}" Text="刷新">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE72C;" />
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </Grid.ContextFlyout>
                    <Grid
                        Margin="0,0,1.5,0"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        CornerRadius="5">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <ListView
                            Padding="4"
                            ItemsSource="{x:Bind ViewModel.Gamers, Mode=OneWay}"
                            SelectedItem="{x:Bind ViewModel.SelectGamer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="item:GameRoilDataItem">
                                    <StackPanel Padding="0,10" Orientation="Horizontal">
                                        <ui:ImageEx
                                            Width="30"
                                            Height="30"
                                            Source="{x:Bind HeadPhotoUrl, Mode=OneWay}" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            Text="{x:Bind RoleName, Mode=OneWay}" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Foreground="{ThemeResource SystemColorGrayTextBrush}"
                                            Text="-" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Foreground="{ThemeResource SystemColorGrayTextBrush}"
                                            Text="{x:Bind ServerName, Mode=OneWay}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <Border
                            Grid.Row="1"
                            Height="1"
                            Margin="20,0"
                            Background="{ThemeResource DividerStrokeColorDefaultBrush}" />
                        <StackPanel
                            Grid.Row="2"
                            Margin="0,5,0,0"
                            Padding="5"
                            HorizontalAlignment="Center"
                            CornerRadius="4"
                            Orientation="Horizontal">
                            <Button Command="{x:Bind ViewModel.OpenDataCenterCommand}" Content="数据面板" />
                            <Button
                                Margin="5,0,0,0"
                                Command="{x:Bind ViewModel.OpenGameSignCommand}"
                                Content="游戏签到" />
                        </StackPanel>
                    </Grid>
                    <Grid
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        Padding="5"
                        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        CornerRadius="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5,0"
                            Padding="8"
                            ui1:Effects.Shadow="{StaticResource CommonShadow}"
                            Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                            CornerRadius="5">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <ui:ImageEx
                                Width="35"
                                Height="35"
                                Source="ms-appx:///Assets/GameIcons/global.ico" />
                            <StackPanel
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Text="{x:Bind Name}" />
                                <Border
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    Padding="3"
                                    VerticalAlignment="Center"
                                    Background="{ThemeResource AccentAAFillColorDefaultBrush}"
                                    CornerRadius="2"
                                    ToolTipService.ToolTip="{x:Bind ViewModel.Stamina.CreateTime, Mode=OneWay}"
                                    Visibility="{x:Bind ViewModel.Stamina.IsShowTime, Mode=OneWay}">
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                        Text="开服玩家" />
                                </Border>
                                <Border
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    Padding="3"
                                    VerticalAlignment="Center"
                                    Background="{ThemeResource AccentAAFillColorDefaultBrush}"
                                    CornerRadius="2"
                                    ToolTipService.ToolTip="{x:Bind ViewModel.Stamina.CreateTime, Mode=OneWay}">
                                    <TextBlock FontSize="12" Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}">
                                        <Run Text="活跃天数:" />
                                        <Run Text="{x:Bind ViewModel.Stamina.ActiveDays, Mode=OneWay}" />
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontFamily="{ThemeResource DefaultFont}"
                                TextAlignment="Center">
                                <Run Text="Level:" />
                                <Run
                                    FontSize="17"
                                    FontWeight="Bold"
                                    Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                    Text="{x:Bind ViewModel.Stamina.UserLevel, Mode=OneWay}" />
                            </TextBlock>
                        </Grid>
                        <Grid Grid.Row="1" Padding="5">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Border
                                Margin="0,0,3,0"
                                Padding="8"
                                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                                CornerRadius="2">
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="48" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Column="1" Orientation="Vertical">
                                        <TextBlock HorizontalAlignment="Center" TextAlignment="Center">
                                            <Run
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                                Text="{x:Bind ViewModel.Stamina.Energy, Mode=OneWay}" />
                                            <LineBreak />
                                            <Run Text="{x:Bind ViewModel.Stamina.MaxEnergy, Mode=OneWay}" />
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Center"
                                        FontFamily="{ThemeResource DefaultFont}"
                                        Text="结晶波片" />
                                </Grid>
                            </Border>
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,0,3,0"
                                Padding="8"
                                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                                CornerRadius="2">
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="48" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Column="1" Orientation="Vertical">
                                        <TextBlock HorizontalAlignment="Center" TextAlignment="Center">
                                            <Run
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                                Text="{x:Bind ViewModel.Stamina.StoreEnergy, Mode=OneWay}" />
                                            <LineBreak />
                                            <Run Text="{x:Bind ViewModel.Stamina.MaxStoreEnergy, Mode=OneWay}" />
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Center"
                                        FontFamily="{ThemeResource DefaultFont}"
                                        Text="结晶单质" />
                                </Grid>
                            </Border>
                            <Border
                                Grid.Column="2"
                                Margin="0,0,0,0"
                                Padding="8"
                                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                                CornerRadius="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="48" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="1" Orientation="Vertical">
                                        <TextBlock HorizontalAlignment="Center" TextAlignment="Center">
                                            <Run
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                                Text="{x:Bind ViewModel.Stamina.Liveness, Mode=OneWay}" />
                                            <LineBreak />
                                            <Run Text="{x:Bind ViewModel.Stamina.MaxLiveness, Mode=OneWay}" />
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        HorizontalAlignment="Center"
                                        FontFamily="{ThemeResource DefaultFont}"
                                        Text="活跃度" />
                                </Grid>
                            </Border>
                            <Grid
                                Grid.Row="1"
                                Grid.ColumnSpan="3"
                                Margin="0,5,0,0"
                                Padding="8"
                                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                                CornerRadius="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="千道门扉的异想"
                                    TextAlignment="Center" />
                                <ProgressBar
                                    Grid.Row="1"
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Stretch"
                                    Maximum="{x:Bind ViewModel.Stamina.MaxRougeScore, Mode=OneWay}"
                                    Value="{x:Bind ViewModel.Stamina.RougeScore, Mode=OneWay}" />
                                <TextBlock
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center">
                                    <Run
                                        FontSize="20"
                                        Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                        Text="{x:Bind ViewModel.Stamina.RougeScore, Mode=OneWay}" />
                                    <Run Text="/" />
                                    <Run Text="{x:Bind ViewModel.Stamina.MaxRougeScore, Mode=OneWay}" />
                                </TextBlock>
                            </Grid>
                            <Grid
                                Grid.Row="2"
                                Grid.ColumnSpan="3"
                                Margin="0,5,0,0"
                                Padding="8"
                                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                                CornerRadius="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Text="战歌重奏收取次数"
                                    TextAlignment="Center" />
                                <ProgressBar
                                    Grid.Row="1"
                                    Margin="0,5,0,0"
                                    HorizontalAlignment="Stretch"
                                    Maximum="{x:Bind ViewModel.Stamina.MaxWeekyInstCount, Mode=OneWay}"
                                    Value="{x:Bind ViewModel.Stamina.WeekyInstCount, Mode=OneWay}" />
                                <TextBlock
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    TextAlignment="Center">
                                    <Run
                                        FontSize="20"
                                        Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                                        Text="{x:Bind ViewModel.Stamina.WeekyInstCount, Mode=OneWay}" />
                                    <Run Text="/" />
                                    <Run Text="{x:Bind ViewModel.Stamina.MaxWeekyInstCount, Mode=OneWay}" />
                                </TextBlock>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="2" Margin="5,0">
                            <ScrollViewer
                                HorizontalScrollBarVisibility="Visible"
                                HorizontalScrollMode="Enabled"
                                VerticalScrollMode="Disabled">
                                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Stamina.BoxList, Mode=OneWay}">
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="source:BoxList">
                                            <Grid
                                                Margin="2,0"
                                                Padding="8"
                                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                CornerRadius="4">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <TextBlock
                                                    FontSize="17"
                                                    FontWeight="Bold"
                                                    Text="{x:Bind Num}"
                                                    TextAlignment="Center" />
                                                <TextBlock
                                                    Grid.Row="1"
                                                    Margin="0,5,0,0"
                                                    Text="{x:Bind BoxName}"
                                                    TextAlignment="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                    <ItemsRepeater.Layout>
                                        <StackLayout Orientation="Horizontal" />
                                    </ItemsRepeater.Layout>
                                </ItemsRepeater>
                            </ScrollViewer>
                        </Grid>
                    </Grid>

                </Grid>
                <Grid
                    Grid.Column="1"
                    Margin="0,5,5,5"
                    CornerRadius="3">
                    <Grid.ChildrenTransitions>
                        <TransitionCollection>
                            <AddDeleteThemeTransition />
                        </TransitionCollection>
                    </Grid.ChildrenTransitions>
                    <Grid CornerRadius="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <FlipView
                            Grid.Row="1"
                            Margin="0,4,0,0"
                            ItemsSource="{x:Bind ViewModel.RoleActive, Mode=OneWay}">
                            <FlipView.ItemTemplate>
                                <DataTemplate x:DataType="wikiModel:EventContentSideWrapper">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel Background="{ThemeResource SystemControlPageBackgroundAltMediumBrush}">
                                            <TextBlock Margin="5" FontSize="14">
                                                <Run FontWeight="Bold" Text="{x:Bind Title}" />
                                                <Run Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" Text="{x:Bind DisplayTime}" />
                                            </TextBlock>
                                        </StackPanel>
                                        <ProgressBar
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch"
                                            Background="Transparent"
                                            Maximum="{x:Bind MaxProgress}"
                                            Value="{x:Bind CurrentProgress}" />
                                        <Grid
                                            Grid.Row="2"
                                            Margin="0,3,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="auto" />
                                            </Grid.ColumnDefinitions>
                                            <ui:ImageEx
                                                Grid.Row="1"
                                                Source="{x:Bind Image1}"
                                                Stretch="Uniform" />
                                            <Grid Grid.Row="1" Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>
                                                <ui:ImageEx Grid.Row="0" Source="{x:Bind Image2}" />
                                                <ui:ImageEx Grid.Row="1" Source="{x:Bind Image3}" />
                                                <ui:ImageEx Grid.Row="2" Source="{x:Bind Image4}" />
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </FlipView.ItemTemplate>
                        </FlipView>
                        <FlipView
                            Grid.Row="0"
                            VerticalAlignment="Top"
                            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                            ItemsSource="{x:Bind ViewModel.WeaponActive, Mode=OneWay}">
                            <FlipView.ItemTemplate>
                                <DataTemplate x:DataType="wikiModel:EventContentSideWrapper">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <StackPanel>
                                            <TextBlock Margin="5" FontSize="14">
                                                <Run FontWeight="Bold" Text="{x:Bind Title}" />
                                                <Run Foreground="{ThemeResource AccentAAFillColorDefaultBrush}" Text="{x:Bind DisplayTime}" />
                                            </TextBlock>
                                        </StackPanel>
                                        <ProgressBar
                                            Grid.Row="1"
                                            HorizontalAlignment="Stretch"
                                            Background="Transparent"
                                            Maximum="{x:Bind MaxProgress}"
                                            Value="{x:Bind CurrentProgress}" />
                                        <Grid
                                            Grid.Row="2"
                                            Margin="0,3,0,0"
                                            Padding="5"
                                            HorizontalAlignment="Center">
                                            <Grid Grid.Row="1" Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <ui:ImageEx
                                                    Grid.Column="0"
                                                    Width="60"
                                                    Height="50"
                                                    Source="{x:Bind Image1}" />
                                                <ui:ImageEx
                                                    Grid.Column="1"
                                                    Width="60"
                                                    Height="50"
                                                    Source="{x:Bind Image2}" />
                                                <ui:ImageEx
                                                    Grid.Column="2"
                                                    Width="60"
                                                    Height="50"
                                                    Source="{x:Bind Image3}" />
                                                <ui:ImageEx
                                                    Grid.Column="3"
                                                    Width="60"
                                                    Height="50"
                                                    Source="{x:Bind Image4}" />
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </FlipView.ItemTemplate>
                        </FlipView>
                    </Grid>

                </Grid>
            </Grid>
        </Border>
        <dev:Shimmer
            Margin="0,10,0,0"
            Style="{ThemeResource DefaultShimmerStyle}"
            Visibility="{x:Bind ViewModel.Loading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
        <dev:Shimmer
            Grid.Row="1"
            Margin="0,10,0,0"
            Style="{ThemeResource DefaultShimmerStyle}"
            Visibility="{x:Bind ViewModel.Loading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
    </Grid>
</Page>

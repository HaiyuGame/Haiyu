<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Haiyu.Pages.GamePages.PunishGamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ani="using:CommunityToolkit.WinUI.Animations"
    xmlns:b="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:bs="using:Haiyu.Behaviors"
    xmlns:control="using:Haiyu.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:launcheModel="using:Waves.Api.Models"
    xmlns:local="using:Haiyu.Pages.GamePages"
    xmlns:m="using:Haiyu.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:n="using:System.Numerics"
    xmlns:property="using:Haiyu.Controls.Propertys"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:wui="using:CommunityToolkit.WinUI.Controls"
    Background="Transparent"
    NavigationCacheMode="Disabled"
    mc:Ignorable="d">


    <Grid x:Name="backGrid" Margin="-1,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ProgressBar
            Grid.ColumnSpan="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Background="Transparent"
            IsIndeterminate="{x:Bind ViewModel.ProcessAction, Mode=OneWay}" />
        <ComboBox
            Margin="10,10,0,0"
            Padding="10,5"
            CornerRadius="10 3 10 3"
            ItemsSource="{x:Bind ViewModel.Servers, Mode=OneWay}"
            SelectedItem="{x:Bind ViewModel.SelectServer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Style="{ThemeResource AcrylicComboBoxStyle}">
            <ComboBox.ItemTemplate>
                <DataTemplate x:DataType="m:ServerDisplay">
                    <Border CornerRadius="5">
                        <TextBlock
                            FontFamily="{ThemeResource DefaultFont}"
                            FontSize="15"
                            Foreground="{ThemeResource AccentAAFillColorDefaultBrush}"
                            Text="{x:Bind Display}" />
                    </Border>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <!--  下载游戏  -->
        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="col1" Width="400" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.Transitions>
                <TransitionCollection>
                    <EntranceThemeTransition FromHorizontalOffset="-20" FromVerticalOffset="-20" />
                    <RepositionThemeTransition />
                </TransitionCollection>
            </Grid.Transitions>
            <ProgressBar
                Grid.ColumnSpan="3"
                MinHeight="5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Background="Transparent"
                Maximum="{x:Bind ViewModel.MaxProgressValue, Mode=OneWay}"
                Style="{ThemeResource FillHeightProgressBar}"
                Value="{x:Bind ViewModel.CurrentProgressValue, Mode=OneWay}" />
            <Grid
                Grid.Row="1"
                Grid.Column="2"
                Margin="0,0,7,7"
                Padding="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                CornerRadius="5">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ChildrenTransitions>
                    <TransitionCollection>
                        <RepositionThemeTransition />
                    </TransitionCollection>
                </Grid.ChildrenTransitions>
                <Border
                    Margin="10,0,10,-1"
                    Padding="5"
                    Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                    CornerRadius="5 5 0 0">
                    <TextBlock
                        Margin="5,0,0,0"
                        FontFamily="{ThemeResource DefaultFont}"
                        FontSize="14"
                        Text="{x:Bind ViewModel.BottomBarContent, Mode=OneWay}"
                        TextAlignment="Center" />
                </Border>
                <Grid
                    Grid.Row="1"
                    Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                    CornerRadius="5">
                    <Grid.ChildrenTransitions>
                        <TransitionCollection>
                            <RepositionThemeTransition />
                        </TransitionCollection>
                    </Grid.ChildrenTransitions>
                    <StackPanel
                        Margin="3"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Visibility="{x:Bind ViewModel.GameDownloadingBthVisibility, Mode=OneWay}">
                        <Button
                            Width="40"
                            Height="40"
                            Margin="5,0,0,0"
                            Padding="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{x:Bind ViewModel.PauseDownloadTaskCommand}"
                            IsEnabled="{x:Bind ViewModel.PauseStartEnable, Mode=OneWay}"
                            Style="{ThemeResource TransparentButtonStyle}"
                            ToolTipService.ToolTip="暂停当前操作">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                FontSize="15"
                                Glyph="{x:Bind ViewModel.PauseIcon, Mode=OneWay}" />
                        </Button>
                        <Button
                            Width="40"
                            Height="40"
                            Padding="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{x:Bind ViewModel.CancelDownloadTaskCommand}"
                            IsEnabled="{x:Bind ViewModel.PauseStartEnable, Mode=OneWay}"
                            Style="{ThemeResource TransparentButtonStyle}"
                            ToolTipService.ToolTip="取消当前操作">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                FontSize="15"
                                Glyph="&#xE71A;" />
                        </Button>
                        <Button
                            Width="40"
                            Height="40"
                            Margin="0,-3,0,0"
                            Padding="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            CornerRadius="5"
                            Style="{ThemeResource TransparentButtonStyle}">
                            <FontIcon
                                FontFamily="Segoe UI Emoji"
                                FontSize="15"
                                Glyph="&#x1F914;" />
                            <Button.Flyout>
                                <Flyout ShouldConstrainToRootBounds="False">
                                    <Grid Width="400">
                                        <RichTextBlock
                                            FontFamily="{ThemeResource DefaultFont}"
                                            LineHeight="20"
                                            LineStackingStrategy="BlockLineHeight"
                                            TextWrapping="Wrap">
                                            <Paragraph>
                                                <Run
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                                    Text="使用注意事项" />

                                                <LineBreak />
                                                <LineBreak />
                                                <Run FontSize="12" Text="• 增量更新机制" />
                                                <LineBreak />
                                                <Run FontSize="12" Text="   - 剩余时间计算排除合并操作耗时，仅供参考" />

                                                <LineBreak />
                                                <LineBreak />

                                                <Run FontSize="12" Text="• 暂停与网络恢复" />
                                                <LineBreak />
                                                <Run FontSize="12" Text="   - 暂停期间断网将会退出下载状态" />

                                                <LineBreak />
                                                <LineBreak />

                                                <Run FontSize="12" Text="• 进度持久化" />
                                                <LineBreak />
                                                <Run FontSize="12" Text="   - 意外退出需重新校验，建议保持程序前台运行" />

                                                <LineBreak />
                                                <LineBreak />

                                                <Run FontSize="12" Text="• 硬件兼容性" />
                                                <LineBreak />
                                                <Run FontSize="12" Text="   - 机械硬盘校验效率约为SSD的1/3～1/5" />
                                            </Paragraph>
                                        </RichTextBlock>
                                    </Grid>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                        <Button
                            Width="40"
                            Height="40"
                            Margin="5,0,0,0"
                            Padding="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            CornerRadius="5"
                            Style="{ThemeResource TransparentButtonStyle}">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                FontSize="16"
                                Glyph="&#xF8B0;" />
                            <Button.Flyout>
                                <Flyout>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox
                                            Width="120"
                                            VerticalAlignment="Center"
                                            PlaceholderText="下载限速(mb/s)"
                                            Text="{x:Bind ViewModel.DownloadSpeedValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            ToolTipService.ToolTip="默认为0，意为不限速" />
                                        <Button
                                            Grid.Column="1"
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"
                                            Command="{x:Bind ViewModel.SetDownloadSpeedCommand}"
                                            Style="{ThemeResource AccentButtonStyle}">
                                            <FontIcon
                                                FontFamily="Segoe Fluent Icons"
                                                FontSize="15"
                                                Glyph="&#xE8FB;" />
                                        </Button>
                                    </Grid>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                    <StackPanel
                        Margin="5"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <Button
                            Width="40"
                            Height="40"
                            Margin="0,0,5,0"
                            Padding="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{x:Bind ViewModel.ShowSelectInstallFolderCommand}"
                            Style="{ThemeResource TransparentButtonStyle}"
                            ToolTipService.ToolTip="选择下载路径"
                            Visibility="{x:Bind ViewModel.GameInstallBthVisibility, Mode=OneWay}">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                FontSize="15"
                                Glyph="&#xE896;" />
                        </Button>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="/"
                            Visibility="{x:Bind ViewModel.GameInputFolderBthVisibility, Mode=OneWay}" />
                        <Button
                            Width="40"
                            Height="40"
                            Margin="5,0,0,0"
                            Padding="10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{x:Bind ViewModel.ShowSelectGameFolderCommand}"
                            Style="{ThemeResource TransparentButtonStyle}"
                            ToolTipService.ToolTip="定位游戏位置"
                            Visibility="{x:Bind ViewModel.GameInputFolderBthVisibility, Mode=OneWay}">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                FontSize="15"
                                Glyph="&#xE8D5;" />
                        </Button>

                    </StackPanel>
                    <StackPanel
                        Margin="3"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Visibility="{x:Bind ViewModel.GameLauncherBthVisibility, Mode=OneWay}">
                        <Button
                            Width="140"
                            Height="60"
                            Padding="0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="{ThemeResource SystemFillColorSuccess}"
                            BorderThickness="0"
                            Command="{x:Bind ViewModel.UpdateGameCommand}"
                            CornerRadius="4"
                            Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                            IsEnabled="{x:Bind ViewModel.EnableStartGameBth, Mode=OneWay}"
                            Style="{ThemeResource AccentButtonStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <FontIcon
                                    Grid.RowSpan="2"
                                    FontFamily="Segoe Fluent Icons"
                                    FontSize="25"
                                    Glyph="{x:Bind ViewModel.LauncherIcon, Mode=OneWay}" />
                                <TextBlock
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontFamily="{ThemeResource DefaultFont}"
                                    FontSize="15"
                                    Text="{x:Bind ViewModel.LauncheContent, Mode=OneWay}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="10"
                                    Text="{x:Bind ViewModel.DisplayVersion, Mode=OneWay}" />
                            </Grid>

                        </Button>
                        <Button
                            Width="60"
                            Margin="3,0,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                            BorderThickness="0"
                            IsEnabled="{x:Bind ViewModel.EnableStartGameBth, Mode=OneWay}">
                            <FontIcon
                                FontFamily="Segoe Fluent Icons"
                                FontSize="18"
                                Glyph="&#xEC7A;" />

                            <Button.Flyout>
                                <MenuFlyout Placement="Bottom">
                                    <MenuFlyoutItem
                                        Command="{x:Bind ViewModel.RepirGameCommand}"
                                        Text="修复游戏"
                                        ToolTipService.ToolTip="此选项等同于下载，启动器会下载服务器资源进行自动覆盖（包含Mod资源）">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEC7A;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem Command="{x:Bind ViewModel.ShowGameResourceCommand}" Text="游戏资源管理">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEF19;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem
                                        Command="{x:Bind ViewModel.ShowGameLauncherCacheCommand}"
                                        Text="游戏登陆管理"
                                        ToolTipService.ToolTip="只包含已经登陆游戏的所有账号信息">
                                        <MenuFlyoutItem.Icon>
                                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE912;" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem
                                        Command="{x:Bind ViewModel.DeleteGameResourceCommand}"
                                        Text="卸载游戏"
                                        ToolTipService.ToolTip="此选项将直接删除游戏文件夹">
                                        <MenuFlyoutItem.Icon>
                                            <SymbolIcon Symbol="Clear" />
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyout>
                            </Button.Flyout>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <!--  下载结束  -->
        <Grid
            x:Name="leftControl"
            Grid.Row="0"
            Grid.RowSpan="3"
            Width="350"
            Height="310"
            Margin="10"
            Padding="5"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            CornerRadius="5"
            Visibility="{x:Bind ViewModel.PlayerCardVisibility, Mode=OneWay}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid
                Padding="5"
                Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="2"
                CornerRadius="5">
                <Grid.Transitions>
                    <TransitionCollection>
                        <EntranceThemeTransition FromVerticalOffset="-50" />
                    </TransitionCollection>
                </Grid.Transitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*" />
                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>
                <FlipView
                    x:Name="fileView"
                    Grid.Row="0"
                    Background="Transparent"
                    ItemsSource="{x:Bind ViewModel.SlideShows, Mode=OneWay}"
                    Style="{ThemeResource DefaultFlipViewStyle}">
                    <i:Interaction.Behaviors>
                        <bs:FilpViewAutoPlayBehavior IsPlay="True" Duration="0:0:8" />
                    </i:Interaction.Behaviors>
                    <FlipView.ItemTemplate>
                        <DataTemplate x:DataType="launcheModel:Slideshow">
                            <Grid>
                                <control:ImageEx Source="{x:Bind Url}" Stretch="UniformToFill" />
                                <Border
                                    MaxWidth="120"
                                    Padding="5"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                                    CornerRadius="0 5 0 0">
                                    <HyperlinkButton
                                        Content="前往"
                                        FontSize="10"
                                        NavigateUri="{x:Bind JumpUrl}" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </FlipView.ItemTemplate>
                </FlipView>

                <Border
                    Padding="10,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"
                    CornerRadius="5 0 0 0">
                    <PipsPager
                        x:Name="FlipViewPipsPager"
                        FontFamily="Segoe Fluent Icons"
                        NumberOfPages="{x:Bind ViewModel.SlideShows.Count, Mode=OneWay}"
                        SelectedPageIndex="{x:Bind Path=fileView.SelectedIndex, Mode=TwoWay}">
                        <PipsPager.SelectedPipStyle>
                            <Style BasedOn="{StaticResource PipsPagerButtonBaseStyle}" TargetType="Button">
                                <Setter Property="Content" Value="&#xE735;" />
                                <Setter Property="FontSize" Value="9" />
                                <Setter Property="Margin" Value="0,0" />
                            </Style>
                        </PipsPager.SelectedPipStyle>
                        <PipsPager.NormalPipStyle>
                            <Style BasedOn="{StaticResource PipsPagerButtonBaseStyle}" TargetType="Button">

                                <Setter Property="FontFamily" Value="Segoe Fluent Icons" />

                                <Setter Property="Content" Value="&#xE734;" />
                                <Setter Property="FontSize" Value="9" />
                                <Setter Property="Margin" Value="0,0" />
                            </Style>
                        </PipsPager.NormalPipStyle>
                    </PipsPager>
                </Border>
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <wui:Segmented
                        x:Name="tabNews"
                        ItemsSource="{x:Bind ViewModel.Tabs, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.SelectTab, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{ThemeResource PivotSegmentedStyle}" />
                    <NavigationViewItemSeparator Grid.Row="1" HorizontalAlignment="Stretch" />
                    <ScrollView Grid.Row="2">
                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.Contents, Mode=OneWay}">
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="launcheModel:Content">
                                    <HyperlinkButton
                                        HorizontalAlignment="Stretch"
                                        HorizontalContentAlignment="Left"
                                        FontSize="12"
                                        NavigateUri="{x:Bind JumpUrl}">
                                        <TextBlock Text="{x:Bind TContent}" TextTrimming="CharacterEllipsis" />
                                    </HyperlinkButton>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollView>
                </Grid>
            </Grid>
        </Grid>
        <control:ImageEx
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Canvas.ZIndex="-1"
            Source="{x:Bind ViewModel.VersionLogo, Mode=OneWay}"
            Stretch="UniformToFill" />
    </Grid>
</Page>
